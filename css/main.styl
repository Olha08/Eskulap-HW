@import 'mixins.styl'

white=#fff
dark-grey=#5a5a5a
blue=#3677fd
light-blue=#f1f8ff

body
  font-family 'Lato', sans-serif

.flex-container
  display flex

header
  background-color #194277
  p
    color white
    padding 25px 0
    margin auto

.btn
  border-radius 25px

.btn-small
  font-size 12px
  color #194277
  font-weight 700
  padding 11px 50px

.jumbotron
  background #3695ff none repeat scroll 0% 0%
  background-image linear-gradient(51deg, #3695ff 0%, #3564fc 100%)
  border-radius 0px!important

.welcome-section
  h2
    color white
    font-size 50px
    font-weight 900
  p
    color white
    font-size 16px
    font-weight 300
    line-height 35px
    padding-top 25px

  .circle
    width 100px
    height 100px
    background white
    -moz-border-radius 50px
    -webkit-border-radius 50px
    border-radius 50px
    margin 0 auto
    margin-bottom 40px

  .fa
    color white
    opacity 0.4
    font-size 35px
    padding-top 90px
    backface-visibility hidden
    -moz-osx-font-smoothing grayscale
    transition-duration 0.3s
    transition-property transform
    &:hover
      transform translateY(40px)

.btn-big
  padding 15px 62px
  color #3695ff
  font-size 16px
  font-weight 700


.about-me
  padding-bottom 75px
  h2
    padding 40px 0 30px
  p
    color dark-grey
    font-size 16px
    font-weight 400
    line-height 35px

.expert-in
  background-color light-blue
  .icon-mob-design
    content url("../img/mobile-design.png")

  .icon-web-design
    content url("../img/web-design.png")

  .icon-web-delopment
    content url("../img/web-development.png")

  h2
    padding 40px 0 100px
  h4
    color blue
  p
    color dark-grey
    font-size 16px
    font-weight 400
    line-height 35px

.clients
  background-color light-blue

.expert-in,.clients,.about-me
  h2
    color blue
    font-size 50px
    font-weight 300

.footer
  background-color #e8f3ff
  background-image linear-gradient(51deg, #3695ff 0%, #3564fc 100%)
  padding 60px 0 60px 
  color white
  h2
    font-weight 300
    font-size 50px
    span
      font-weight 700
  p
    margin auto